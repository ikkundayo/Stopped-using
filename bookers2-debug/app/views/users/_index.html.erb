<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
        <td>
          <% if user.bookcomments_by? %>
            <p>コメント数：<%= book.bookcomments.count %></p>
          <% else %>
            <p>コメント数：0</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
