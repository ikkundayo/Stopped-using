<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: current_user %>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>検索結果</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>User Name</th>
            <th>Book Title</th>
            <th>Book Category</th>
          </tr>
        </thead>
        <tbody>
          <% @searches.each do |f| %>
            <tr>
              <td>
                <%= link_to user_path(f) do %>
                  <%= image_tag f.get_profile_image(50,50) %>
                <% end %>
              </td>
              <td>
                <%= link_to user_path(f) do %>
                  <%= f.name %>
                <% end %>
              </td>
              <td><%#= f.title %></td>
              <td><%#= render 'books/tag_list', tag_list: f.tag_list %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>